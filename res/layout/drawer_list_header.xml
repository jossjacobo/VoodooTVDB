<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:oak="http://oak/oak/schema"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <!-- Profile Information -->
    <oak.widget.TextViewWithFont
        android:text="@string/sliding_menu_profile_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/sliding_menu_title"
        android:textSize="@dimen/slidingmenu_title_text_size"
        android:paddingTop="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        oak:font="Roboto-Light.ttf"
        />
    <View
        style="@style/sideMenuSeparator"
        />

    <LinearLayout
        style="@style/FillWidth"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        >
        <ImageView
            android:id="@+id/drawer_list_header_avatar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/icon"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/list_favorite_description"
            />
        <oak.widget.TextViewWithFont
            android:id="@+id/drawer_list_header_user"
            android:text="@string/app_name"
            style="@style/FillWidth"
            android:textColor="@color/sliding_menu_text_color_selector"
            android:textSize="@dimen/slidingmenu_content_text_size"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_vertical"
            oak:font="Roboto-Light.ttf"
            />
    </LinearLayout>
    <oak.widget.TextViewWithFont
        android:id="@+id/drawer_list_header_logInOut"
        android:text="@string/drawer_list_header_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@color/sliding_menu_text_color_selector"
        android:textSize="@dimen/slidingmenu_content_text_size"
        android:paddingTop="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        oak:font="Roboto-Light.ttf"
        />
    <oak.widget.TextViewWithFont
        android:id="@+id/drawer_list_header_go_pro"
        android:text="@string/drawer_list_header_go_pro"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@color/blue"
        android:textSize="@dimen/slidingmenu_content_text_size"
        android:paddingTop="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        oak:font="Roboto-Light.ttf"
        />
</LinearLayout>